
@using TheStory.BusinessLayer
@using TheStory.Entities

@{ 

    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.GetCategories();
}

<p class="lead">Yazılar</p>
<div class="list-group">
    <a href="@Url.Action("Index","Home")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Tümü</a>

    <a href="Hakkımda.html" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Hakkımda </a>

    @foreach (Category cat in list)
        {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item">
        <span class="glyphicon glyphicon-arrow-right"></span> @cat.Title</a>
        }
</div>